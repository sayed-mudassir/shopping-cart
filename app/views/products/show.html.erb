<div class="jumbotron">
  <h1 class="display-4">
    <strong>Title:</strong>
  <%= @product.title %>
  </h1>
  <p class="lead">
     <strong>Price:</strong>
  <%= @product.price %>
  </p>
  <p class="lead">
  <% if @product.user == current_user %>
    <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-outline-secondary' %> 
  <%end%>
    <%= link_to 'Back', products_path, class: 'btn btn-primary' %>
  </p>
</div>

