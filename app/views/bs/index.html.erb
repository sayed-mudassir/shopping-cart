<p id="notice"><%= notice %></p>

<h1>Bs</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Cod</th>
      <th>Phone no</th>
      <th>Card number</th>
      <th>Cvv</th>
      <th>Exp date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bs.each do |b| %>
      <tr>
        <td><%= b.address %></td>
        <td><%= b.cod %></td>
        <td><%= b.phone_no %></td>
        <td><%= b.card_number %></td>
        <td><%= b.cvv %></td>
        <td><%= b.exp_date %></td>
        <td><%= link_to 'Show', b %></td>
        <td><%= link_to 'Edit', edit_b_path(b) %></td>
        <td><%= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

